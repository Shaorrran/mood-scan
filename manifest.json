{
    "name": "mental ext",
    "description": "",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "./popup/popup.html",
        "default_icon": "./img/logo-g.png"
    },
    "icons": {
        "16": "./img/logo-g.png",
        "32": "./img/logo-g.png",
        "48": "./img/logo-g.png",
        "128": "./img/logo-g.png"
    },
    "background": {
        "service-worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/some-script.js"],
            "css": ["css/main.css"],
            "run_at": "document_end"
        }
    ]
}